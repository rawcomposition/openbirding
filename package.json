{
  "name": "openbirding",
  "version": "1.0.0",
  "description": "A modern bird watching application with Vite frontend and Vercel serverless API",
  "private": true,
  "workspaces": [
    "client",
    "api"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:api\"",
    "dev:client": "cd client && npm run dev",
    "dev:api": "cd api && npm run dev",
    "build": "npm run build:client && npm run build:api",
    "build:client": "cd client && npm run build",
    "build:api": "cd api && npm run build",
    "start:api": "cd api && npm run start",
    "install:all": "npm install && cd client && npm install && cd ../api && npm install",
    "sync-regions": "cd api && npx tsx scripts/sync-regions.ts",
    "sync-region-info": "cd api && npx tsx scripts/sync-region-info.ts",
    "generate-region-parents": "cd api && npx tsx scripts/generate-region-parents.ts",
    "init-db": "cd api && npx tsx scripts/init-db.ts",
    "update-packs": "cd api && npx tsx scripts/update-pack-info.ts"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "birding",
    "bird-watching",
    "react",
    "typescript",
    "vite",
    "vercel",
    "serverless"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "kysely": "^0.28.5"
  }
}
